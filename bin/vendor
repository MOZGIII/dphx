#!/bin/bash
set -e
cd "$(dirname "${BASH_SOURCE[0]}")/.."

COMMAND=$1
shift

if [[ -z "$COMMAND" || "$COMMAND" == "install" ]]; then
  exec vendetta -p
elif [[ "$COMMAND" == "update" ]]; then
  exec vendetta -p -u
fi

echo "Usage: vendor [install]"
echo "   or: vendor update"
echo
echo "Error: unknown command \"$COMMAND\""
exit 2
